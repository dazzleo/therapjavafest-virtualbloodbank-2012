<%@ page language="java" contentType="text/html; charset=ISO-8859-1" pageEncoding="ISO-8859-1"%><!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"><html><style>	@import url("style/home.css");</style><%@page import="java.util.*"%><%	String userName = (String)session.getAttribute("userName");		//select search type	String selectCity = "";	String selectBloodGroup = "";	String selectItem = request.getParameter("textSearchType");	if( selectItem!=null ){		if( selectItem.equals("city")==true ){			selectCity = "selected";		}		else if( selectItem.equals("bloodGroup")==true ){			selectBloodGroup = "selected";		}	}		//store search info	Vector headerInfo = (Vector)request.getAttribute("headerInfo");	Vector info = (Vector)request.getAttribute("info");%><head>	<title>	Home - VBB </title>	<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">	<link rel="stylesheet" type="text/css" href="css/reset.css" />	<link rel="stylesheet" type="text/css" href="css/960.css" />	<link rel="stylesheet" type="text/css" href="css/text.css" />	<link rel="stylesheet" type="text/css" href="css/demo.css" />	<link rel="stylesheet" type="text/css" href="css-user/style.css" /></head><body>	<div class="container_16">		<div class="grid_16">			<div class="banner">			</div>   		</div>				<div class="clear"></div>				<div class="grid_16">			<div class="top-nav">				<ul>					<%					if( userName==null ){						out.println("<li><a href=\"reg-form.jsp\">Registration</a></li>");						out.println("<li><a href=\"login.jsp\">Login</a></li>");					}					else{						out.println("<li><a href=\"confirm-logout.jsp\">Logout</a></li>");					}					%>					<li><a href="#">About</a></li>					<li><a href="#">Contact Us</a></li>									</ul>			</div>		</div>		<div id="content">			<div class="grid_4">				<div class="left-sidebar">					<h1> Home </h1>					<ul>						<li><a href="fetch-user-profile">Profile</a></li>						<li><a href="confirm-logout.jsp">Logout</a></li>						<li><a href="confirm-message.jsp">Message</a></li>					</ul>   				</div>			</div>			<div class="grid_12">				<div class="contentpanel">					<h1>Welcome <i>${userName}</i></h1>					<caption>Search with </caption>					<form method="post" action="fetch-search-string">												<input type="text" name="textSearchString" value="${param.textSearchString}" />						<select type="text" name="textSearchType" >								<option value="userName" > User name </option>								<option value="bloodGroup"  <%=selectBloodGroup%> > Blood group </option>								<option value="city" <%=selectCity%> > City </option>						</select>						<input type="submit" value="Search" />					</form>					<br/>										<!--sending message status-->					<b>${messageInfo}</b>					<% session.removeAttribute("messageInfo");%>										<!--searching table-->					<%if( headerInfo!=null ) { %>						<table width="100%">							<caption>Search result for <i>${param.textSearchString}</i> </caption>							<tr>							<%								for(Object headerName : headerInfo){									out.println("<th>"+headerName+"</th>");								}							%>							</tr>							<%								if( info!=null ){									for(Object rowInfo : info){										Vector row = (Vector) rowInfo;										out.println("<tr>");										for(Object rowData : row){											out.println("<td>"+rowData+"</td>");										}										out.println("</tr>");									}								}							%>						</table>					<% } %>				</div>			</div>		</div>		<div class="clear"></div>		<div class="grid_16">			<div class="footer">				Copyright &copy; 2012 Asterisk			</div>		</div>	</div></body></html>